<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "needs-validation", :novalidate => true }) do |f| %>
  <%= devise_error_messages! %>
    <div class="col-12" style="padding: 0px;">
      <label class="label">Nombre Completo</label>
      <%= f.text_field :names, autofocus: true, autocomplete: "email", class: "form1 form-control", id: "validationCustom01", :required => true %>

      <label class="label">Correo Electronico</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form1 form-control", id: "validationCustom01", :required => true %>

      <div class="invalid-feedback">
        Estos Campos Tienen Que Estar Completados Para Ingresar
      </div>  
      
    </div>

    <div class="form-row">

      <div class="col-md-6">
        <label class="label">Contraseña</label>
        <%= f.password_field :password, autocomplete: "new-password", class: "form1 form-control" %>
      </div>

      <div class="col-md-6">
        <label class="label">Confirmar Contraseña</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form1 form-control" %>                              
      </div>

    </div>

    <div class="form-row">

      <div class="col-md-6">
        <label class="label">Pais</label>
        <%= f.text_field :city, autofocus: true, autocomplete: "email", class: "form1 form-control", id: "validationCustom01", :required => true %>
          <div class="invalid-feedback">
            Este Campo Tiene Que Estar Completado Para Ingresar
          </div>
      </div>

      <div class="col-md-6">
        <label class="label">Numero de Celular</label>
        <%= f.text_field :phone, autofocus: true, autocomplete: "email", class: "form1 form-control", id: "validationCustom01", :required => true %>
          <div class="invalid-feedback">
            Este Campo Tiene Que Estar Completado Para Ingresar
          </div>        
      </div>
                                
    </div>

  <div class="col-12 text-center">
    <br>
    <%= f.submit "Crear Cuenta", class: "btn1" %>
  </div>
<% end %>

