<% if @admins.any? %>
<table class="table">
  <thead>
    <tr>
      <th class="text-left">Avatar</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Nombre de Usuario</th>
      <th>Email</th>
      <th class="text-center">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
      	<td class="text-left">
      	<%= admin.avatar? ? image_tag(admin.avatar_url(), class: "img-xs rounded-circle",id: "user-avatar1") : image_tag("https://dnuba.s3.amazonaws.com/uploads/bank_image/achivo/44/user.jpeg", class: "img-xs rounded-circle")%>
      	</td>
        <td><%= admin.name %></td>
        <td><%= admin.last_name %></td>
        <td><%= admin.user_name %></td>
        <td><%= admin.email %></td>
        <td class="text-center">
        <% if current_admin.email == admin.email %>
        
        <% else %>
            <%= link_to destroy_path(admin.id), method: :delete, title: "Emilinar Cuenta", data: {
                confirm: 'Â¿Estas Seguro?',
                'confirm-button-text': 'Borrar',
                'cancel-button-text': 'Cancelar',
                'confirm-button-color': '#CC0000',
                 text: 'Recuerda que el registro se borrara permanentemente',
                'image-url': ''}, class: "btn btn-danger" do %>
              <span class="glyphicon glyphicon-trash"></span> 
            <% end -%>
        <% end -%>

            <%= link_to admin_edit_path(admin.id), remote: true, class: "btn btn-primary", title: "Editar" do %>
              <i class="fas fa-user-edit"></i>
            <% end -%>

          </td>
        </tr>
    <% end %>
  </tbody>
</table>

<div class="sk-cube-grid" id="cube">
  <div class="sk-cube sk-cube1"></div>
  <div class="sk-cube sk-cube2"></div>
  <div class="sk-cube sk-cube3"></div>
  <div class="sk-cube sk-cube4"></div>
  <div class="sk-cube sk-cube5"></div>
  <div class="sk-cube sk-cube6"></div>
  <div class="sk-cube sk-cube7"></div>
  <div class="sk-cube sk-cube8"></div>
  <div class="sk-cube sk-cube9"></div>
</div>


<div class="modal-footer">
  <%= link_to 'Nuevo Administrador', new_path, remote: true, class: "btn btn-success"%>
</div>

  <div class = "col-md-12 paginate text-center title-table1">
      <%= will_paginate @admins, renderer: BootstrapPagination::Rails, previous_label: "&laquo;", next_label: "&raquo;", inner_window: 1, outer_window: 0 %>
  </div>
<% else %>
  <h1 align="center">todavia no nos han contactado!</h1>
<% end -%>



<script type="text/javascript">
  <% if flash[:delete].present? %>
    toastr["error"]("<%= flash[:delete] %> con <b>Exito!</b>");
  <% end -%>
</script>



<style type="text/css" media="screen">
