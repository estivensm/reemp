<script src="//cdn.jsdelivr.net/autocomplete.js/0/autocomplete.min.js"></script>
<script type="text/javascript">
  $(document).ready(function() {
    var client = algoliasearch('DJ3JJMGZSP', '0f9abe035e333810031a60c33a56907c');

