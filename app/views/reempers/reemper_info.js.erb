$("#card-users").fadeIn("show");
$("#info-reemp").html('<%= j render "parciales/reemper_info", reemper: @reemper %>');
$("#name").text("<%= @reemper.user.names %>");
$("#cirugia").text("<%= @reemper.profession %>");
$("#biograpy").text("<%= @reemper.biography[0..120] %>");

<% if @valoration.any? %>
	<% @valoration.each do |valoracion| %>
		  $("#valoration").html('<%= j render "parciales/user", valoracion: valoracion %>');
	<% end %>
<% else %>
	$("#valoration").remove();
<% end %>

document.getElementById("reemper-img").src = '<%= @reemper.user.avatar.url() %>';

$("#btn-show").click(function(event) {
	$("#info-reemp").addClass('none');

	if($('.remplace').css('display') == 'none')
		$(".remplace").removeClass('none').addClass('show');
		$("#info-reemp").removeClass('show').addClass('none');
	{	

	}

	$(".remplace").html('<%= j render "parciales/user_info" %>');
});

