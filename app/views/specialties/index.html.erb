<h1>Specialidad</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Categoria</th>
      <th>Codigo</th>
      <th colspan="2">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @specialties.each do |specialty| %>
      <tr>
        <td><%= specialty.name %></td>
        <td><%= specialty.description %></td>
        <td><%= specialty.category_id %></td>
        <td><%= specialty.code %></td>
        <td><%= link_to 'Editar', edit_specialty_path(specialty) %></td>
        <td>
          <%= link_to 'Eliminar', specialty, method: :delete, data: { confirm: 'Are you sure?' } %>
            
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="modal-footer">
  <%= link_to 'Nueva Especialidad', new_specialty_path, class: "btn btn-success"%>
</div>

