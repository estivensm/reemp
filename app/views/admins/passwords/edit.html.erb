<div class="card col-md-4 offset-md-4">
  <div class="card-body">

    <div class="col-md-12 text-center img-admin">
        <img src="https://mybc1.s3.amazonaws.com/uploads/rseguimiento/evidencia/374/1.png" alt="">
      </div>

  <h3 align="center">Cambia Tu Contraseña</h3>
  <br>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "needs-validation", :novalidate => true  }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="col-md-12">
      <%= f.label :password, "Nueva Contraseña" %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form form-control", :placeholder => "Contraseña", id: "validationCustom01", :required => true %>

      <div class="invalid-feedback">
        Este Campo Tiene Que Estar Completado
      </div>
      <br>
    </div>

    <div class="col-md-12">
      <%= f.label :password_confirmation, "Confirmar Contraseña" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form form-control", :placeholder => "Confirmar Contraseña", id: "validationCustom01", :required => true %>

      <div class="invalid-feedback">
        Este Campo Tiene Que Estar Completado
      </div>
      <br>
    </div>

    <div class="col-md-12 text-center">
      <%= f.submit "Cambiar Contraseña", class: "btn btn-success" %>

      <%- if controller_name != 'sessions' %>
          <%= link_to "Ingresar", new_session_path(resource_name), class: "btn btn-light" %><br />
      <% end -%>

    </div>
  <% end %>

  </div>
  <br>
</div>

<style type="text/css" media="screen">

  .card{
    border-radius: 15px;
    margin-top: 6%;
    box-shadow: -2px -4px 10px #dcdcfe, 2px 7px 10px #dcdcfe;
  }

  body{
    height: 668px;
  }

  .img-admin img{
    width: 250px;
  }

</style>